<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <style name="widget_big_thin" parent="widget_big" >
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TextAppearance.QS.Clock" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">@dimen/qs_clock_size</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
        <item name="android:textColor">@color/qs_translucent_text_primary</item>
        <item name="android:minHeight">@dimen/min_qs_clock_container_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.QS.ClockBig" parent="TextAppearance.QS.Clock">
        <item name="android:textSize">@dimen/qs_big_clock_size</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
        <item name="android:minHeight">@dimen/min_qs_big_clock_container_size</item>
    </style>

    <style name="TextAppearance.QS.Highlights" parent="TextAppearance.QS.Clock">
        <item name="android:textColor">@color/qs_translucent_text_secondary</item>
    </style>

    <style name="TextAppearance.MediaPlayer">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="TextAppearance.MediaPlayer.Title" parent="TextAppearance.MediaPlayer">
    <item name="android:textSize">18sp</item>
    <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="QSBrightnessThiccBar" parent="@android:style/Widget.DeviceDefault.SeekBar">
        <item name="android:thumb">@null</item>
        <item name="android:progressDrawable">@drawable/brightness_progress_drawable</item>
    </style>

    <style name="QSActionButtons">
        <item name="android:layout_width">@dimen/qs_header_action_button_size</item>
        <item name="android:layout_height">@dimen/qs_header_action_button_size</item>
        <item name="android:padding">@dimen/qs_header_icon_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/qs_translucent_text_primary</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TraslucentButton" parent="@*android:style/Widget.DeviceDefault.Button">
        <item name="android:textColor">@color/qs_translucent_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/btn_translucent_borderless</item>
    </style>
</resources>
